<div class="sidebar 3u">

  <section>
    <h2><i class="fa fa-file-text-o"></i> Recent Posts</h2>
    <% blog.articles[0...5].each do |article| %>
      <dl>
        <dt><%= link_to article.title, article %></dt>
        <dd><%= article.date.strftime('%Y-%m-%d') %></dd>
      </dl>
    <% end %>
  </section>

  <section>
    <h2><i class="fa fa-folder-open-o"></i> Tags</h2>
    <ul class="tags">
      <% blog.tags.each do |tag, articles| %>
        <li><%= link_to "#{tag}", tag_path(tag) %> (<%= articles.size %>)</li>
      <% end %>
    </ul>
  </section>

  <section>
    <h2><i class="fa fa-archive"></i> Archive</h2>
    <ul class="archive">
      <% blog.articles.group_by {|a| a.date.year }.each do |year, articles_year| %>
        <% articles_year.group_by {|a| a.date.month }.each do |month, articles_month | %>
          <li><%= link_to "#{year}-#{format('%02d', month)}", blog_month_path(year, month) %> (<%= articles_month.length %>)</li>
        <% end %>
      <% end %>
    </ul>
  </section>

</div>
